<AnchorPane prefHeight="626.0" prefWidth="1002.0" styleClass="form_container" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CategorieController">
   <children>
      <Label layoutX="16.0" layoutY="14.0" text="Gestion Categories" textFill="#016a91">
         <font>
            <Font name="Fira Sans Medium" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="tf_nomCategorie" layoutX="57.0" layoutY="144.0" prefHeight="38.0" prefWidth="177.0" promptText="Nom Categorie" />
      <Button fx:id="btn_ajouterC" layoutX="164.0" layoutY="494.0" mnemonicParsing="false" onAction="#AjouterCategorie" prefHeight="35.0" text="Ajouter" />
      <Button fx:id="btn_modifierC" layoutX="267.0" layoutY="494.0" mnemonicParsing="false" onAction="#ModifierCategorie" prefHeight="35.0" text="Modifier" />
      <Button fx:id="btn_supprimerC" layoutX="371.0" layoutY="494.0" mnemonicParsing="false" onAction="#SupprimerCategorie" prefHeight="35.0" prefWidth="132.0" text="Supprimer" />
